{
  "manifest_version": 3,
  "name": "Focus Time Tracker",
  "version": "1.0.0",
  "description": "Track website usage time and block distracting sites during focus sessions.",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Focus Time Tracker",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg", 
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  
  "options_page": "options/options.html",
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "focus_blocking_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 